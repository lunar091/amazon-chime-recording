{
  //"extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./",
    "downlevelIteration": true,
    "experimentalDecorators": false,
    "lib": [
      "DOM",
      "ES2015",
      "ES2016.Array.Include",
      "ES2017.SharedMemory"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "sourceMap": true,
    "stripInternal": true,
    "target": "ES2015"
    
  },
 
  "include": [
    "./app/**/*"
  ]
}
